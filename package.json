{
  "name": "lucia",
  "displayName": "Lucia Intellisense",
  "description": "Lucia syntax highlighting and intellisense for VSCode",
  "version": "0.0.2",
  "icon": "assets/logo.png",
  "publisher": "aidenybai",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "html": {
      "customData": [
        "./customData/html.json"
      ]
    },
    "grammars": [
      {
        "scopeName": "text.html.basic",
        "path": "./syntaxes/lucia.json",
        "injectTo": [
          "text.html.basic"
        ]
      }
    ]
  },
  "activationEvents": [
    "*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lucialand/lucia-vscode.git"
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "pretest": "yarn run test-compile && yarn run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "generate": "node ./generator/generate.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.53.0",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "ts-loader": "^8.0.14",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0",
    "webpack": "^5.19.0",
    "webpack-cli": "^4.4.0"
  },
  "dependencies": {
    "jsonfile": "^6.1.0"
  }
}
